<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            play: False
            size_hint_y: 0.8
        Button:
            id: start_stop
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1

<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: img
            size_hint_y: 0.7
        Button:
            text: 'Create Sharable Link'
            on_press: root.create_link()
            size_hint_y: 0.1
        Label:
            id: img_link
            text: 'https://...'
            size_hint_y: 0.1
        GridLayout:
            size_hint_y: 0.1
            cols: 2
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
            Button:
                text: 'Open Link'
                on_press: root.open_link()
        Button:
            size_hint_y: 0.1
            text: 'Take another picture'
            on_press: root.start_over()



<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'



